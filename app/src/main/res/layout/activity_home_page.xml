<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prince.transtracker.HomePage"
    android:orientation="vertical"
    android:background="@drawable/backhome">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_gravity="center"
        android:gravity="center"
        android:scaleType="fitCenter">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:fontFamily="sans-serif-condensed"
            android:text="TransTracker"
            android:textAlignment="center"
            android:textColor="#3333cc"
            android:textSize="60sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Connecting Bussiness    "
            android:textAlignment="textEnd"
            android:textColor="#3333cc"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="70dp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="270dp"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:background="@drawable/backbutton">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/invest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button"
                    android:text="INvest"
                    android:textColor="#ffffff" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/viewinvest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button"
                    android:text="View Investement"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
